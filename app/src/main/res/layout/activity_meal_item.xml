<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imgMealItem"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="#EEEEEE"
        android:contentDescription="Meal Image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvMealName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ארוחה לדוגמה"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@android:drawable/btn_star_big_on"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="4dp"/>

            <ImageView
                android:id="@+id/btnRelog"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@android:drawable/ic_input_add"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvMealDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026-01-12"
            android:textSize="12sp"
            android:textColor="#888888"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvMealInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="חלבון: X גרם | קלוריות: Y"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:textColor="#666666"/>

        <LinearLayout
            android:id="@+id/layoutComponents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp" />

    </LinearLayout>

</LinearLayout>