<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 转专转 -->
        <TextView
            android:text="砖专 砖 "
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <!-- 专住  -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvProteinProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 0 专 "
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressProteinCircular"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:indicatorSize="12dp"
                    app:trackThickness="12dp"
                    app:trackColor="#E0E0E0"
                    app:indicatorColor="#3F51B5" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 专住 拽专转 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCaloriesProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 / 0 拽专转"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progressCaloriesCircular"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:indicatorSize="12dp"
                    app:trackThickness="12dp"
                    app:trackColor="#E0E0E0"
                    app:indicatorColor="#FF9800" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 转转 专 砖砖转砖 注 -->
        <ImageView
            android:id="@+id/imgMeal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            android:contentDescription="转转 专"/>

        <!-- 拽专 AI (住转专 专专转 ) -->
        <ProgressBar
            android:id="@+id/progressAi"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="12dp"/>

        <!-- 驻转专 注转 转 -->
        <Button
            android:id="@+id/btnUploadMeal"
            android:text="注 转 砖 专 "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <!-- 驻转专 爪驻 住专转 专转 -->
        <Button
            android:id="@+id/btnViewMeals"
            android:text="爪驻 住专转 专转 "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="12dp"/>

        <!-- 驻转专 注 转 -->
        <Button
            android:id="@+id/btnEditInfo"
            android:text="注 转 砖"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:foreground="?attr/selectableItemBackground"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            app:menu="@menu/bottom_nav_menu" />
    </LinearLayout>
</ScrollView>
